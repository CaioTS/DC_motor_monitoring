<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="72dp">

        <TextView
            android:id="@+id/log_show"
            android:layout_width="379dp"
            android:layout_height="220dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.968" />

        <Button
            android:id="@+id/Log_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logs"
            app:layout_constraintBottom_toTopOf="@+id/PWM_button"
            app:layout_constraintEnd_toStartOf="@+id/Time_Button"
            app:layout_constraintHorizontal_bias="0.418"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTime"
            app:layout_constraintVertical_bias="0.659" />

        <Button
            android:id="@+id/Time_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Time"
            app:layout_constraintBottom_toTopOf="@+id/PWM_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.843"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTime2"
            app:layout_constraintVertical_bias="0.636" />

        <Button
            android:id="@+id/PWM_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set PWM"
            app:layout_constraintBottom_toTopOf="@+id/log_show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.686" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="271dp"
            android:layout_height="29dp"
            app:layout_constraintBottom_toTopOf="@+id/log_show"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PWM_button"
            app:layout_constraintVertical_bias="0.308" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="123dp"
            android:layout_height="64dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintBottom_toTopOf="@+id/PWM_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextDate2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.185"
            tools:text="@tools:sample/date/ddmmyy" />

        <EditText
            android:id="@+id/editTextDate2"
            android:layout_width="123dp"
            android:layout_height="59dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintBottom_toTopOf="@+id/PWM_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.788"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.181"
            tools:text="@tools:sample/date/ddmmyy" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="118dp"
            android:layout_height="65dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintBottom_toTopOf="@+id/PWM_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.175"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate"
            app:layout_constraintVertical_bias="0.288"
            tools:text="@tools:sample/date/hhmm" />

        <EditText
            android:id="@+id/editTextTime2"
            android:layout_width="132dp"
            android:layout_height="67dp"
            android:ems="10"
            android:inputType="time"
            app:layout_constraintBottom_toTopOf="@+id/PWM_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintStart_toEndOf="@+id/editTextTime"
            app:layout_constraintTop_toBottomOf="@+id/editTextDate2"
            app:layout_constraintVertical_bias="0.322"
            tools:text="@tools:sample/date/hhmm" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="379dp"
        android:layout_height="220dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968" />

</androidx.constraintlayout.widget.ConstraintLayout>